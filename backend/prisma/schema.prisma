generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Clientes {
  clienteId Int      @id @default(autoincrement())
  nombre    String
  apellido  String?
  edad      Int?
  telefono  String
  mail      String   @unique
  ventas    Ventas[]
}

model Autos {
  autoId   Int        @id @default(autoincrement())
  marca    String
  modelo   String
  anho     String
  catalogo Catalogo[]
  venta    Ventas[]
}

model Ventas {
  ventaId    Int      @id @default(autoincrement())
  clienteId  Int
  autoId     Int
  tipoVenta  String
  montoCuota Float?
  tipoPago   String
  autos      Autos    @relation(fields: [autoId], references: [autoId])
  clientes   Clientes @relation(fields: [clienteId], references: [clienteId])
}

model Catalogo {
  catalogoId Int      @id @default(autoincrement())
  autoId     Int
  precio     Float
  descuento  Float    @default(0)
  estado     String   @default("En stock")
  fecha      DateTime @default(now())
  cantidad   Int
  autos      Autos    @relation(fields: [autoId], references: [autoId])
}
